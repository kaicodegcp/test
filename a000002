#!/bin/bash

docker images --format "{{.Repository}}:{{.Tag}}" > /tmp/image-list.txt

while IFS= read -r img; do
  if [[ "$img" == *36842304766.dkr.ecr.us-west-2.amazonaws.com* ]]; then
    echo "Removing image: $img"
    docker rmi -f "$img"
  fi
done < /tmp/image-list.txt



